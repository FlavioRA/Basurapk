<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaNotificacion">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="336dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="37dp"
        android:gravity="center"
        android:text="Nueva Noticia"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="115dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="121dp"
        android:layout_height="167dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="144dp"
        app:srcCompat="@drawable/logonegro" />

    <EditText
        android:id="@+id/edtNuevaNoticia"
        android:layout_width="380dp"
        android:layout_height="126dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="307dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Escribir noticia..."
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:hint="Fecha"
        android:layout_marginStart="50dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="59dp"
        android:ems="10"
        android:inputType="date" />

    <Button
        android:id="@+id/btnEnviarN"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="115dp"
        android:text="Publicar" />

</RelativeLayout>